---
import CallToAction from '~/components/widgets/CallToAction.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
  desciption: "intuitem provides multiple consultancy services on infrastructure, cloud, security, and more. Our team of experts can help you succeed and manage your challenges.",
};

import { sanityClient } from "sanity:client";
const services = await sanityClient.fetch(`*[_type == "service"]{
  slug,
  "title":title[_key == "en"][0].value,
  "description":description[_key == "en"][0].value,
  icon,
} | order(slug asc)`); 
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Services"
    title="Accelerate and Secure your projects with our consultancy services"
    subtitle="Our mutli-disciplinary team of experts can help you succeed and manage your challenges. The team has extensive experience in multiple industries across the globe. The best part? We're just a click away."
    actions={[{ variant:"primary", text: 'Tell me more', href: '#services' }]}
    image={{
      src: 'https://images.unsplash.com/photo-1519389950473-47ba0277781c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1740&q=80',
      alt: 'services',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Explore our areas of expertise"
    subtitle="Discover how our seasoned consultants can help you succeed and manage your challenges."
    columns={3}
    id="services"
    items={services}
  />

