---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Pricing"
    title="Simple and predictable"
    subtitle="There is a simple plan for all your needs."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our prices"
    subtitle="CISO Assistant offers multiple pricing plans to suit your needs. Choose the one that best fits your requirements and budget."
    prices={[
      {
        title: 'Free',
        subtitle: 'Personal use, self-hosted',
        price: "0",
        period: 'forever',
        items: [
          {
            description: 'Essential features',
