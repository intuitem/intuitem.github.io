          {
            description: 'Hosted on your own server (or local machine)',
          },
          {
            description: 'Community support',
          },
          {
            description: 'AGPLv3 license',
          },
        ],
        callToAction: {
          target: '_blank',
          text: 'Community',
          href: 'https://github.com/intuitem/ciso-assistant-community',
        },
      },
      {
        title: 'Pro',
        subtitle: 'Optimal choice for small teams',
        price: "29",
        period: 'Per Month',
        items: [
          {
            description: 'Everything in free plan',
          },
          {
            description: 'Billed annually',
          },
          {
            description: 'Gen AI and data import features',
          },
          {
            description: 'Pay only for editors. 100 readers included',
          },
          {
            description: 'Priority support',
          },
          {
            description: 'Automatic updates and backups',
          },
          {
            description: 'On-premises integration assistance',
          },
        ],
        callToAction: {
          text: 'Start Free Trial',
          href: '/trial',
        },
        hasRibbon: true,
        ribbonTitle: 'popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'Suitable option for companies',
        price: 199,
        period: 'Per Month',
        isCustom: true,
        items: [
          {
            description: 'Everything in pro plan',
          },
          {
            description: 'Billed annually',
          },
          {
            description: 'Customization options',
          },
          {
            description: 'SSO/SAML integration',
          },
          {
            description: 'Volume discount',
          },
          {
            description: 'Advanced support plan',
          },
          {
            description: 'CSM and integration assistance',
          },
          
        ],
        callToAction: {
          text: 'Contact',
          href: '/contact',
        },
      },
    ]}
  />

