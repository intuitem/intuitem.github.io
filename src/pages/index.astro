---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';

import Features from '~/components/widgets/Features.astro';

import Steps from '~/components/widgets/Steps.astro';

import CallToAction from '~/components/widgets/CallToAction.astro';
import Brands from '~/components/widgets/Brands.astro';
const metadata = {
  title: 'AstroWind â€” Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};

import PortableText from "~/components/portabletext/PortableText.astro";

import { sanityClient } from "sanity:client";
const heroSection = await sanityClient.fetch(`*[_type == "siteSection" && slug == "hero"]{
    slug,
    "body": body[_key == "en"][0].value,
}`);

const featuresContent = await sanityClient.fetch(`*[_type == "feature"]{
  "title": title[_key == "en"][0].value,
  "description": description[_key == "en"][0].value,
  icon,
  slug,
} | order(slug asc)`);


---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Get started',
        href: '/contact',
        icon: 'tabler:cloud',
      },
      { text: 'Learn more', href: '#features', icon: 'tabler:mood-plus'},
    ]}
    image={{ src: '~/assets/images/hero.png', alt: 'AstroWind Hero Image' }}
  >
    <Fragment slot="title">
      We 
      <span class="text-accent dark:text-white highlight"> simplify</span> the work of cyber security teams
    </Fragment>

    <Fragment slot="subtitle">
      <div class="text-lg text-gray-500 dark:text-gray-400 pb-4">
        <PortableText value={heroSection[0].body} />
      </div>
      
    </Fragment>
  </Hero>



  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Features"
    title="What you get with CISO Assistant"
    subtitle="Learn more about the features that make CISO Assistant the best choice for your security team. We are constantly working to improve our product, so stay tuned for more features!"
    items={featuresContent}
  />

  

  <!-- Steps Widget ****************** -->

  <Steps
    title="Let CISO Assistant work for you in no time in easy simple steps"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Choose your deployment</span>',
        description:
          "Kickstart with the free instance or GitHub! The choice is yours. We're here to make your journey as smooth as possible. So, take your pick and let's get started!",
        icon: 'tabler:package',
      },
      {
        title: 'Step 2.a: <span class="font-medium">Experiment and Add your content</span>',
        description:
          "Follow the documentation to get started with CISO assistant. You can add your own content and experiment with the features. We're here to help you every step of the way on our Discord server.",
        icon: 'tabler:letter-case',
      },
      {
        title: 'Step 2.b: <span class="font-medium">Discuss specific features/needs</span>',
        description:
          'Either you are looking for a specific feature or you have a specific need, we are here to help you. Any customization will be covered by the enterprise plan support and can be tailored to your needs.',
        icon: 'tabler:paint',
      },
      {
        title: 'Step 3: <span class="font-medium">Upgrade your plan</span>',
        description:
          'If you are happy with the community edition then we are happy for you. We encourage you to upgrade to Pro or Enterprise to get the most out of CISO Assistant and data migration is guaranteed.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1616198814651-e71f960c3180?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Steps image',
    }}
  />





  

  <!-- Brands Widget ****************** -->

  <Brands
    title="References & Collaborations"
    subtitle="Some of the organizations that we had the pleasure to work with:"
    icons={[]}
    images={[
      {
        src: 'https://cdn.pixabay.com/photo/2015/05/26/09/37/paypal-784404_1280.png',
        alt: 'Paypal',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/48/visa-6850402_1280.png',
        alt: 'Visa',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/10/01/10/29/ebay-189064_1280.png',
        alt: 'Ebay',
      },

      {
        src: 'https://cdn.pixabay.com/photo/2015/04/13/17/45/icon-720944_1280.png',
        alt: 'Youtube',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/02/12/09/07/microsoft-80658_1280.png',
        alt: 'Microsoft',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/04/23/17/41/node-js-736399_1280.png',
        alt: 'Node JS',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2015/10/31/12/54/google-1015751_1280.png',
        alt: 'Google',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2021/12/06/13/45/meta-6850393_1280.png',
        alt: 'Meta',
      },
      {
        src: 'https://cdn.pixabay.com/photo/2013/01/29/22/53/yahoo-76684_1280.png',
        alt: 'Yahoo',
      },
    ]}
  />



  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Free instance',
        href: '/contact',
        icon: 'tabler:cloud',
      },
      {
        variant: 'secondary',
        text: 'Walkthrough',
        href: '/ciso-assistant',
        icon: 'tabler:mood-plus',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to get started?
    </Fragment>

    <Fragment slot="subtitle">
      Nothing better than a free instance to test it out and find out how CISO Assistant can help you. Don't
      waste more time on low values operations and start focusing on what really matters.
    </Fragment>
  </CallToAction>
</Layout>
